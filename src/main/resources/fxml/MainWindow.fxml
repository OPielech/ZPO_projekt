<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="120.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="MainWindowController">
   <children>
      <HBox alignment="CENTER" layoutY="70.0" prefWidth="600.0" spacing="12.0">
         <children>
            <Button fx:id="btnPM10" mnemonicParsing="false" onAction="#btnPM10Clicked" prefHeight="30.0" prefWidth="80.0" text="PM10">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Button>
            <Button fx:id="btnPM25" mnemonicParsing="false" onAction="#btnPM25Clicked" prefHeight="30.0" prefWidth="80.0" text="PM2,5">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font></Button>
            <Button fx:id="btnO3" mnemonicParsing="false" onAction="#btnO3clicked" prefHeight="30.0" prefWidth="80.0" text="O3">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font></Button>
            <Button fx:id="btnNO2" mnemonicParsing="false" onAction="#btnNO2Clicked" prefHeight="30.0" prefWidth="80.0" text="NO2">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font></Button>
            <Button fx:id="btnSO2" mnemonicParsing="false" onAction="#btnSO2Clicked" prefHeight="30.0" prefWidth="90.0" text="SO2">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font></Button>
            <Button fx:id="btnCO" mnemonicParsing="false" onAction="#btnCOClicked" prefHeight="30.0" prefWidth="80.0" text="CO">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font></Button>
         </children>
      </HBox>
      <HBox alignment="CENTER" layoutY="25.0" prefWidth="600.0">
         <children>
            <TextField fx:id="textFieldCity" prefHeight="25.0" prefWidth="170.0" promptText="Please enter the name of city" />
         </children>
      </HBox>
   </children>
</AnchorPane>
